<div class="writer">
    <div class="writer-container">
        <form action="/articles/new" class="articles-container" method="POST">
            <textarea class="writer-block" name="title" id="title" cols="30" rows="1" placeholder="Title"></textarea>
            <textarea class="writer-block" name="body" id="body" cols="30" rows="20"
                placeholder="Write to inspire"></textarea>
            <textarea class="writer-block" name="tags" id="tags" cols="30" rows="1"
                placeholder="Tags (coding, finance, news)"></textarea>
            <button class="writer-block" type="submit">Publish</button>
        </form>


        <div class="writer-container">
            <div class="input-container">
                <h2>SideWriter</h2>
                <form>
                    <div class="input-field">
                        <input type="text" name="" required="">
                        <label>Title</label>
                        <span></span>
                    </div>
                    <input class="btn-submit" type="submit" value="Publish" name="">
                </form>
            </div>
        </div>
    </div>
</div>